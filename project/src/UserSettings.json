{
	"static": {
		"patternsFile": "project/patterns/Patterns.java"
	},
	"output": {
		"path": "out/",
		"format": "json"
	},
	"global": {
		"numberOfThreads": 32,
		"parseComments": false
	},
	"dynamic": {
		"innerLoops": true,
		"possibleTernary": true,
		"ternary": true,
		"cyclomaticComplexity": true,
		"nPathComplexity": true,
		"loopsFor": true,
		"loopsForeach": true,
		"loopsWhile": true,
		"countMethods": true,
		"countMethodsPrivate": true,
		"countMethodsPublic": true,
		"countMethodsProtected": true,
		"countMethodsStatic": true,
		"countMethodsAbstract": true,
		"linesOfCodeClass": true,
		"linesOfCodeMethod": true,
		"countComments": true,
		"countCommentsInline": true,
		"countCommentsBlock": true,
		"countCommentsJavadoc": true,
		"countClassFields": true,
		"countClassFieldsPublic": true,
		"countClassFieldsProtected": true,
		"countClassFieldsPrivate": true,
		"countClassFieldsStatic": true,
		"superClasses": true,
		"superClassesJava": true
	}
}